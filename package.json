{
  "name": "mitt",
  "version": "1.1.0",
  "description": "Tiny 200b functional Event Emitter / pubsub.",
  "jsnext:main": "dist/mitt.es.js",
  "module": "dist/mitt.es.js",
  "main": "dist/mitt.common.js",
  "scripts": {
    "lint": "flow && eslint src test",
    "test": "npm-run-all -s lint test:*",
    "test:api": "nyc --reporter lcov mocha --compilers js:babel-register test/**/*.js",
    "test:report": "nyc report",
    "build": "npm-run-all -s build:*",
    "build:clean": "rimraf dist",
    "build:browser": "rollup -c --environment BROWSER",
    "build:node": "rollup -c --environment NODE",
    "build:show": "ls -al dist",
    "release": "npm-run-all -s test build git",
    "git": "npm-run-all -s git:*",
    "git:commit": "git commit -am $npm_package_version",
    "git:tag": "git tag $npm_package_version",
    "git:push": "git push && git push --tags",
    "git:publish": "npm publish"
  },
  "repository": "developit/mitt",
  "keywords": [
    "events",
    "eventemitter",
    "pubsub"
  ],
  "homepage": "https://github.com/developit/mitt",
  "authors": [
    "Jason Miller <jason@developit.ca>"
  ],
  "license": "MIT",
  "files": [
    "src"
  ],
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "mocha": true,
      "node": true,
      "es6": true
    },
    "globals": {
      "expect": true
    },
    "rules": {
      "semi": [
        2,
        "always"
      ]
    }
  },
  "typings": "./src/mitt.d.ts",
  "devDependencies": {
    "babel-core": "^6.9.1",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "eslint": "^3.13.1",
    "flow-bin": "^0.38.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "npm-run-all": "^2.1.1",
    "nyc": "^10.1.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.4",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-plugin-zopfli": "^1.0.2",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0"
  },
  "nyc": {
    "check-coverage": true,
    "statements": 100,
    "functions": 100,
    "branches": 90,
    "lines": 100
  }
}
